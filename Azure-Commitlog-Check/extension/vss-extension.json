{
    "manifestVersion": 1,
    "id": "azure-commit-log-check",
    "name": "Azure commit log check",
    "version": "1.3.0",
    "publisher": "lusipad",
    "targets": [
        {
            "id": "Microsoft.VisualStudio.Services"
        }
    ],
    "description": "检查 Azure DevOps PR 的 commit message 是否符合规范，支持自定义规则和自动检测 PR",
    "categories": [
        "Azure Pipelines"
    ],
    "tags": [
        "PR",
        "Pull Request",
        "Commit",
        "Validation",
        "Pipeline",
        "Build"
    ],
    "content": {
        "details": {
            "path": "overview.md"
        }
    },
    "links": {
        "getstarted": {
            "uri": "https://github.com/lusipad/Azure-Commitlog-Check"
        },
        "support": {
            "uri": "https://github.com/lusipad/Azure-Commitlog-Check/issues"
        }
    },
    "repository": {
        "type": "git",
        "uri": "https://github.com/lusipad/Azure-Commitlog-Check"
    },
    "icons": {
        "default": "images/extension-icon.png"
    },
    "files": [
        {
            "path": "images",
            "addressable": true
        },
        {
            "path": "task"
        }
    ],
    "contributions": [
        {
            "id": "azure-commitlog-check-task",
            "type": "ms.vss-distributed-task.task",
            "targets": [
                "ms.vss-distributed-task.tasks"
            ],
            "properties": {
                "name": "task"
            }
        }
    ],
    "galleryFlags": [
        "Public"
    ]
}
